<UserControl x:Class="WpfClient.UserControlViewMatchs"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfClient"
             mc:Ignorable="d"
             Height="550"
             Width="Auto"
             MinWidth="800">
    <Grid Background="LightPink">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition />
            <RowDefinition Height="5*" />
        </Grid.RowDefinitions>
        <TextBlock Text="Matchs found"  Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="35"/>
        <TextBlock FontSize="25" TextWrapping="WrapWithOverflow" Text="Here you can see all the people in the program, select which one you want to start a chat with and press on them to send them a request"  Grid.Row="1" Margin="10 5"/>
        <WrapPanel Margin="5"
                   Grid.Row="2"
                   x:Name="mainWP" />
        <Grid Margin="5"
              Grid.Row="2"
              x:Name="profileGD"
              Visibility="Hidden" />
    </Grid>
</UserControl>
